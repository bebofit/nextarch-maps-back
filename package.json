{
  "name": "grok-api",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "format": "prettier --config .prettierrc --write",
    "seed": "ts-node scripts/seed.ts",
    "build": "tsc",
    "start": "ts-node index.ts",
    "start:prod": "node dist/index.js",
    "watch": "nodemon",
    "watch:windows": "npm run watch -- -L",
    "test": "NODE_ENV=testing jest --runInBand",
    "test:ci": "npm run test -- --ci",
    "test:watch": "npm run test -- --watch",
    "test:watchAll": "npm run test -- --watchAll",
    "test:coverage": "npm run test -- --collectCoverage"
  },
  "nodemonConfig": {
    "watch": ".",
    "ext": "ts",
    "ignore": [
      "*.spec.ts"
    ],
    "delay": "3",
    "exec": "npm run start"
  },
  "jest": {
    "collectCoverage": false,
    "coverageDirectory": "coverage",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "dotenv/config"
    ],
    "setupFilesAfterEnv": [
      "./setup-tests.ts"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@bugsnag/js": "^6.5.0",
    "@bugsnag/plugin-express": "^6.5.1",
    "@elastic/elasticsearch": "^7.5.0",
    "@hapi/joi": "^16.1.8",
    "@types/crypto-js": "^3.1.47",
    "aws-sdk": "^2.597.0",
    "bcrypt": "^3.0.7",
    "bull": "^3.12.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.0.0",
    "date-fns": "^2.8.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "firebase-admin": "^8.9.0",
    "helmet": "^3.21.2",
    "http-status": "^1.4.2",
    "ioredis": "^4.14.1",
    "joi-objectid": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.4",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "nanoid": "^2.1.8",
    "nodemailer": "^6.4.2",
    "rate-limiter-flexible": "^1.2.2",
    "sharp": "^0.23.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bull": "^3.12.0",
    "@types/cors": "^2.8.6",
    "@types/ejs": "^3.0.0",
    "@types/express": "^4.17.2",
    "@types/faker": "^4.1.8",
    "@types/hapi__joi": "^16.0.6",
    "@types/helmet": "0.0.44",
    "@types/ioredis": "^4.14.3",
    "@types/jest": "^24.0.25",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/mongoose": "^5.5.38",
    "@types/morgan": "^1.7.37",
    "@types/multer": "^1.3.10",
    "@types/multer-s3": "^2.7.7",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^12.12.24",
    "@types/nodemailer": "^6.4.0",
    "@types/sharp": "^0.23.1",
    "@types/supertest": "^2.0.8",
    "faker": "^4.1.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.4"
  }
}
